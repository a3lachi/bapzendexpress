{
    "openapi": "3.0.3",
    "info": {
      "title": "Your API Name",
      "description": "Description of your API",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "/"
      }
    ],
    "paths": {
      "/api/bapz/id": {
        "post": {
          "summary": "Retrieve a product by ID",
          "description": "Retrieves a product from the database by its ID",
          "tags": [
            "Product"
          ],
          "operationId": "getProductById",
          "parameters": [
            {
              "name": "id",
              "in": "body",
              "description": "The ID of the product to retrieve",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 123
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Product found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "found": {
                        "type": "string",
                        "example": "yes"
                      },
                      "src": {
                        "type": "string",
                        "example": "https://example.com/image.jpg"
                      },
                      "data": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "example": 123
                          },
                          "name": {
                            "type": "string",
                            "example": "Product name"
                          },
                          "description": {
                            "type": "string",
                            "example": "Product description"
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Product not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "data": {
                        "type": "string",
                        "example": "not found"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  